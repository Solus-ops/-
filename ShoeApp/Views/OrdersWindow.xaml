<Window x:Class="ShoeApp.Views.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заказы"
        Height="600"
        Width="900"
        FontFamily="Times New Roman"
        Background="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель кнопок -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="BtnAdd"
                    Content="Добавить"
                    Width="120"
                    Margin="0,0,10,0"
                    Background="#00FA9A"
                    Click="BtnAdd_Click"/>

            <Button x:Name="BtnEdit"
                    Content="Редактировать"
                    Width="120"
                    Margin="0,0,10,0"
                    Click="BtnEdit_Click"/>

            <Button x:Name="BtnDelete"
                    Content="Удалить"
                    Width="120"
                    Click="BtnDelete_Click"/>
        </StackPanel>

        <!-- Таблица заказов -->
        <DataGrid x:Name="OrdersGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="№"
                                    Binding="{Binding OrderNumber}"
                                    Width="80"/>

                <DataGridTextColumn Header="Дата заказа"
                                    Binding="{Binding OrderDate}"
                                    Width="120"/>

                <DataGridTextColumn Header="Дата получения"
                                    Binding="{Binding DeliveryDate}"
                                    Width="120"/>

                <DataGridTextColumn Header="Клиент"
                                    Binding="{Binding Users.FullName}"
                                    Width="200"/>

                <DataGridTextColumn Header="Пункт выдачи"
                                    Binding="{Binding PickupPoints.City}"
                                    Width="200"/>

                <DataGridTextColumn Header="Статус"
                                    Binding="{Binding OrderStatus.Name}"
                                    Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
