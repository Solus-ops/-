<Window x:Class="ShoeApp.Views.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Товары"
        Height="600"
        Width="900"
        FontFamily="Times New Roman"
        Background="White">
    <DockPanel Margin="8">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Stretch" Margin="0,0,0,8">
            <Label Content="Поиск:" VerticalAlignment="Center" Margin="0,4,8,0"/>
            <TextBox x:Name="txtSearch" Width="300" VerticalAlignment="Center" TextChanged="TxtSearch_TextChanged"/>
            <Button x:Name="btnRefresh" Content="Обновить" Margin="8,0,0,0" Click="BtnRefresh_Click"/>
            <Button x:Name="btnAdd" Content="Добавить" Margin="16,0,0,0" Click="BtnAdd_Click"/>
            <Button x:Name="btnEdit" Content="Редактировать" Margin="8,0,0,0" Click="BtnEdit_Click"/>
            <Button x:Name="btnDelete" Content="Удалить" Margin="8,0,0,0" Click="BtnDelete_Click"/>
            <Label HorizontalAlignment="Right" Content="{Binding CurrentUserInfo}" Margin="20,0,0,0"/>
        </StackPanel>

        <DataGrid x:Name="dgProducts" AutoGenerateColumns="False" CanUserAddRows="False" DockPanel.Dock="Top" 
                  IsReadOnly="True" SelectionMode="Single" Margin="0,0,0,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Артикул" Binding="{Binding Article}" Width="120"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Categories.Name}" Width="150"/>
                <DataGridTextColumn Header="Производитель" Binding="{Binding Manufacturers.Name}" Width="150"/>
                <DataGridTextColumn Header="Поставщик" Binding="{Binding Suppliers.Name}" Width="150"/>
                <DataGridTextColumn Header="Скидка (%)" Binding="{Binding Discount}" Width="80"/>
                <DataGridTextColumn Header="Остаток" Binding="{Binding StockQty}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>
</Window>
