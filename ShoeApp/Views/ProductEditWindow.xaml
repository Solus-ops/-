<Window x:Class="ShoeApp.Views.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование товара"
        Height="500"
        Width="600"
        FontFamily="Times New Roman"
        Background="White">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal">
                <Label Content="Артикул" Width="120" />
                <TextBox x:Name="tbArticle" Width="350" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <Label Content="Наименование" Width="120" />
                <TextBox x:Name="tbName" Width="350" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <Label Content="Цена" Width="120" />
                <TextBox x:Name="tbPrice" Width="150" />
                <Label Content="Скидка (%)" Width="100" Margin="16,0,0,0"/>
                <TextBox x:Name="tbDiscount" Width="80"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <Label Content="Остаток" Width="120"/>
                <TextBox x:Name="tbStock" Width="80"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <Label Content="Категория" Width="120"/>
                <ComboBox x:Name="cbCategory" Width="250" DisplayMemberPath="Name"/>
                <Label Content="Производитель" Width="120" Margin="12,0,0,0"/>
                <ComboBox x:Name="cbManufacturer" Width="200" DisplayMemberPath="Name"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <Label Content="Поставщик" Width="120"/>
                <ComboBox x:Name="cbSupplier" Width="250" DisplayMemberPath="Name"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,6,0,0">
                <Label Content="Описание" Width="120"/>
                <TextBox x:Name="tbDescription" Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnSave" Content="Сохранить" Width="120" Margin="8" Click="BtnSave_Click" Background="#00FA9A"/>
            <Button Content="Отмена" Width="120" Margin="8" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
